<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:navigationBarColor">@color/color_primary_dark</item>
        <item name="android:windowBackground">@color/background_color</item>

        <item name="fontFamily">@font/prompt</item>

        <item name="materialButtonStyle">@style/Widget.Sera.Button</item>
        <item name="android:datePickerDialogTheme">@style/Widget.Sera.Dialog</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.MaterialComponents" />

    <style name="Widget.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.Sera.Button" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/prompt_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="backgroundTint">@color/color_primary</item>
    </style>

    <style name="Widget.Sera.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/prompt_light</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.Sera.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/text_input_background_color</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="android:textColorHint">@color/color_text_third</item>
    </style>

    <style name="Widget.Sera.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:colorAccent">@color/color_primary</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/SecondaryTextButton</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/SecondaryTextButton</item>
        <item name="android:colorControlActivated">@color/color_primary</item>
    </style>

    <style name="ToolbarSearch">
        <item name="android:paddingTop">@dimen/toolbar_search_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/toolbar_search_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/toolbar_search_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/toolbar_search_padding_horizontal</item>
    </style>

    <style name="ToolbarTitle">
        <item name="fontFamily">@font/prompt</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:textColor">@color/toolbar_title_text_color</item>
    </style>

    <!-- Text -->

    <style name="Title">
        <item name="fontFamily">@font/prompt_bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="TitleSecondary">
        <item name="fontFamily">@font/prompt_light</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/title_secondary_text_color</item>
    </style>

    <style name="TextInput">
        <item name="fontFamily">@font/prompt_light</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/color_text_primary</item>
    </style>


    <style name="SearchTextInput" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/prompt</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:paddingTop">@dimen/search_edit_text_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/search_edit_text_padding_vertical</item>
        <item name="android:paddingRight">@dimen/search_edit_text_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/search_edit_text_padding_horizontal</item>
    </style>

    <style name="ListItemTitle">
        <item name="fontFamily">@font/prompt_light</item>
        <item name="android:textSize">@dimen/item_list_title_text_size</item>
    </style>

    <style name="ListItemDescription">
        <item name="fontFamily">@font/prompt_light</item>
        <item name="android:textSize">@dimen/item_list_description_text_size</item>
    </style>

    <style name="TipPrimary">
        <item name="fontFamily">@font/prompt_light</item>
        <item name="android:textSize">@dimen/tip_primary_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Tip">
        <item name="fontFamily">@font/prompt_bold</item>
        <item name="android:textSize">@dimen/tip_text_size</item>
        <item name="android:textColor">@color/color_text_secondary</item>
    </style>

    <!-- Buttons -->

    <style name="PrimaryTextButton" parent="Widget.Sera.TextButton">
        <item name="android:textSize">@dimen/button_text_primary_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_text_secondary</item>
        <item name="rippleColor">@color/color_text_secondary</item>
    </style>

    <style name="SecondaryTextButton" parent="Widget.Sera.TextButton">
        <item name="android:textSize">@dimen/button_text_secondary_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_text_third</item>
        <item name="rippleColor">@color/color_text_third</item>
    </style>

    <!-- Category -->
    <style name="CategoryText">
        <item name="android:textSize">@dimen/category_item_text_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
